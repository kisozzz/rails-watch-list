<div class="big_container px-5">
	    <div class="row">
	    	<% @movies.each do |movie| %>
		        <div class="col-sm-6 col-md-3">
		            <div class="profile-card">
		                <div class="profile-img">
		                    <%= image_tag movie.poster_url, alt: "movie posters" %>
		                </div>
		                <div class="profile-content">
		                    <h2 class="title"><%= movie.title %>
		                        <span>Rating | <%= movie.rating %></span>
		                        <span id="overview"><%= movie.overview %></span>
		                    </h2>
		                    <ul class="social-link">
		                        <li><a href="/lists"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bookmark-heart" viewBox="0 0 16 16">
		                        <path fill-rule="evenodd" d="M8 4.41c1.387-1.425 4.854 1.07 0 4.277C3.146 5.48 6.613 2.986 8 4.412z"/>
		                        <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.777.416L8 13.101l-5.223 2.815A.5.5 0 0 1 2 15.5V2zm2-1a1 1 0 0 0-1 1v12.566l4.723-2.482a.5.5 0 0 1 .554 0L13 14.566V2a1 1 0 0 0-1-1H4z"/></svg></a></li>
		                    </ul>
		                </div>
		            </div>
		        </div>
	        <% end -%>
	    </div>
</div>

